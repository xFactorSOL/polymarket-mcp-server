# Polymarket MCP Server - Environment Configuration Template
# Copy this file to .env and fill in your values
# For Render deployment, set these as environment variables in the Render dashboard

# ============================================================================
# DEMO MODE (Read-Only Access)
# ============================================================================
# Set to true for read-only access without a wallet
# DEMO_MODE=true

# ============================================================================
# Required: Polygon Wallet Configuration (Full Trading Mode)
# ============================================================================
# Your Polygon wallet private key (without 0x prefix)
POLYGON_PRIVATE_KEY=

# Your Polygon wallet address (with 0x prefix)
POLYGON_ADDRESS=

# Chain ID: 137 for mainnet, 80002 for Amoy testnet
POLYMARKET_CHAIN_ID=137

# ============================================================================
# Optional: L2 API Credentials (Auto-created if not provided)
# ============================================================================
# These are automatically created on first run if not provided
# You can set them manually if you already have API credentials
POLYMARKET_API_KEY=
POLYMARKET_PASSPHRASE=
POLYMARKET_API_KEY_NAME=

# ============================================================================
# Safety Limits - Risk Management
# ============================================================================
# Maximum size for a single order in USD
MAX_ORDER_SIZE_USD=1000.0

# Maximum total exposure across all positions in USD
MAX_TOTAL_EXPOSURE_USD=5000.0

# Maximum position size per market in USD
MAX_POSITION_SIZE_PER_MARKET=2000.0

# Minimum liquidity required in market before trading (USD)
MIN_LIQUIDITY_REQUIRED=10000.0

# Maximum spread tolerance (0.05 = 5%)
MAX_SPREAD_TOLERANCE=0.05

# ============================================================================
# Trading Controls
# ============================================================================
# Enable autonomous trading without confirmation
ENABLE_AUTONOMOUS_TRADING=true

# Require user confirmation for orders above this USD amount
REQUIRE_CONFIRMATION_ABOVE_USD=500.0

# Automatically cancel orders if spread exceeds MAX_SPREAD_TOLERANCE
AUTO_CANCEL_ON_LARGE_SPREAD=true

# ============================================================================
# API Endpoints (Usually don't need to change)
# ============================================================================
CLOB_API_URL=https://clob.polymarket.com
GAMMA_API_URL=https://gamma-api.polymarket.com

# ============================================================================
# Logging
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# Render/Production Deployment
# ============================================================================
# PORT is automatically set by Render - don't set manually
# PORT=8080
